<h2>Listing ads</h2>

<table class="table table-striped">
  <tr>
    <th>Site name</th>
    <th>Site url</th>
    <th>Date posted</th>
    <th>Last updated</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.site_name %></td>
    <td><%= ad.site_url %></td>
    <td><%= ad.date_posted %></td>
    <td><%= ad.last_updated %></td>
    <td><%= ad.notes %></td>
    <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
		<td><%= button_to t('general.delete'), ad, :method => :delete, :confirm => t('question.confirm_delete') %></td>
  </tr>
<% end %>
</table>

<br />

<div class="clearfix">
	<%= link_to 'New Ad', new_ad_path %>
</div>
